# --- DATABASE (Neon / Railway Postgres) ---
DATABASE_URL="postgresql://user:password@host:port/dbname?sslmode=require"

# --- DISTRIBUTED LOCKS (Redis / Upstash) ---
REDIS_HOST="your-redis-host"
REDIS_PORT=6379
REDIS_PASSWORD="your-redis-password"

# --- EVENT LOG (Kafka / Redpanda / Upstash) ---
# Comma-separated list of brokers
KAFKA_BROKERS="broker1:port,broker2:port"
KAFKA_USERNAME="your-kafka-username"
KAFKA_PASSWORD="your-kafka-password"
KAFKA_MECHANISM="scram-sha-256" # Common for cloud Kafka providers

# --- APP CONFIG ---
PORT=3000
NODE_ENV=production
FRONTEND_URL="https://ticket-blitz-v2.vercel.app"
